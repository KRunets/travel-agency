<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <import resource="classpath*:database-bean-config.xml"/>
    <import resource="classpath*:collection-bean-config.xml"/>

    <bean id="countryService" class="by.runets.travelagency.service.impl.CountryService">
        <constructor-arg ref="countryRepository"/>
    </bean>
    <bean id="hotelService" class="by.runets.travelagency.service.impl.CountryService">
        <constructor-arg ref="hotelRepository"/>
    </bean>
    <bean id="reviewService" class="by.runets.travelagency.service.impl.ReviewService">
        <constructor-arg ref="reviewRepository"/>
    </bean>
    <bean id="tourService" class="by.runets.travelagency.service.impl.TourService">
        <constructor-arg ref="tourRepository" />
    </bean>
    <bean id="userService" class="by.runets.travelagency.service.impl.UserService">
        <constructor-arg ref="userRepository" />
    </bean>
</beans>