<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
 		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
       xmlns:util="http://www.springframework.org/schema/util">
    <bean id="country-properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:properties/data.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE" />
        </property>
    </bean>
    <bean id="firstCountry" class="by.runets.travelagency.entity.Country" scope="prototype">
        <property name="id" value="#{new Integer(country-properties['first-country-id'])}"/>
        <property name="name" value="${first-country-name}"/>
        <property name="hotels"  value="#{null}"/>
        <property name="tours" value="#{null}" />
    </bean>
    <bean id="secondCountry" class="by.runets.travelagency.entity.Country" scope="prototype">
        <property name="id" value="#{new Integer(country-properties['second-country-id'])}"/>
        <property name="name" value="${second-country-name}"/>
        <property name="hotels"  value="#{null}"/>
        <property name="tours" value="#{null}" />
    </bean>
    <bean id="thirdCountry" class="by.runets.travelagency.entity.Country" scope="prototype">
        <property name="id" value="#{new Integer(country-properties['third-country-id'])}"/>
        <property name="name" value="${third-country-name}"/>
        <property name="hotels"  value="#{null}"/>
        <property name="tours" value="#{null}" />
    </bean>
    <bean id="fourthCountry" class="by.runets.travelagency.entity.Country" scope="prototype">
        <property name="id" value="#{new Integer(country-properties['fourth-country-id'])}"/>
        <property name="name" value="${fourth-country-name}"/>
        <property name="hotels"  value="#{null}"/>
        <property name="tours" value="#{null}" />
    </bean>

</beans>